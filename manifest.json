{
	"manifest_version": 2,
	"name": "Vertauschte Woerter!",
	"version": "3.0.2",

	"description": "Vertauscht WÃ¶rter auf Webseiten.",

	"icons": {
		"16": "img/icon_16.png",
		"48": "img/icon_48.png",
		"96": "img/icon_96.png",
		"128": "img/icon_128.png"
	},
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/ 'unsafe-eval'; object-src 'self'",
	"background": {
		"scripts": [
			"lib/browser-polyfill.js",
			"lib/pyodide.js",
			"plugin/background.js"
		]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [
			"lib/browser-polyfill.js",
			"plugin/plugin.js"
		]
	}],

	"permissions": [
		"tabs",
		"storage"
	],

	"options_ui": {
		"page": "plugin/options.html",
		"open_in_tab": true
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "vertauschte-woerter@asozial.org",
			"strict_min_version": "57.0"
		}
	}

}
